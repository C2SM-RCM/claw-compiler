<!--
This file describe all low-level transformations included in the CLAW
language specifications.

More information: https://github.com/C2SM-RCM/claw-language-specification
-->
<transformations>
  <!-- Directive -->
  <transformation name="directive-primitive"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.directive.DirectivePrimitive" />

  <!-- Loop -->
  <transformation name="array-transform"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.loop.ArrayTransform" />

  <transformation name="loop-extract"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.loop.LoopExtraction" />

  <transformation name="loop-hoist"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.loop.LoopHoist" />

  <transformation name="loop-fusion"
    type="dependent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.loop.LoopFusion" />

  <transformation name="loop-interchange"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.loop.LoopInterchange" />

  <transformation name="if-extract"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.loop.IfExtract" />

  <!-- Utility -->
  <transformation name="on-the-fly"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.utility.ArrayToFctCall" />

  <transformation name="remove"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.utility.UtilityRemove" />

  <!-- Caching -->
  <transformation name="kcache"
    type="independent" trigger="directive" directive="claw"
    class="cx2x.translator.transformation.claw.caching.Kcaching" />
</transformations>
